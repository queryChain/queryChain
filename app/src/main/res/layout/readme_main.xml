<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/floorbackground"
    tools:context="com.querychain.mainapp.ViewNote">

    <ImageView
        android:id="@+id/querychainreadmelogo"
        android:contentDescription="@string/desc2"
        android:layout_width="151dp"
        android:layout_height="151dp"
        android:padding="1dp"
        app:srcCompat="@drawable/querychainlogo"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:text="@string/privacy"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRead"
        android:textColor="@color/white_text"
        android:background="@drawable/buttoninside"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-bold"
        android:textSize="10sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewReadDescription"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:text='@string/readmetext'
        android:layout_width="376dp"
        android:layout_height="299dp"
        android:id="@+id/textViewReadDescription"
        android:scrollbars = "vertical"
        android:textSize="12sp"
        android:textColor="@color/white_text"
        android:maxWidth="100dip"
        android:background="#99222233"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/querychainreadmelogo"
        android:textAlignment="gravity" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_items"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:background="#99FFFFFF" />

</android.support.constraint.ConstraintLayout>